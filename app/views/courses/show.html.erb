<div class="container space">
<div class="card shadow p-3 mb-5 bg-white rounded">

  <img class="card-img-top" src="<%= @course.img %>" height="500" alt="Card image cap">
  <div class="card-body">
    <h4 class="card-title"><%= @course.name %></h4>
            <p class="card-text"> <b>Instructor: </b><%= @course.instructor.name %></p>
    <p class="card-text"><b>Description:</b><%= @course.desc %></p>
    <p class="card-text"><small class="text-muted">Start: <%= @course.start %></small> <small class="text-muted">End: <%= @course.end %></small></p>
<% if user_signed_in? && current_user.user_type  %>
   <a ><%= link_to 'Edit', edit_course_path(@course), class:"btn btn-dark"%></a>
   <a ><%= link_to 'Delete', course_path(@course),method: :delete , class:"btn btn-dark" , data: {confirm: "Are you sure?"}%></a>
   <% elsif  user_signed_in? && !current_user.user_type  %>
   
            <% if @course.students.include? current_user.id.to_s %>
           <a><%= link_to 'Join this Course',"#{@course.id}/add",method: "put", class:"btn btn-dark disabled"%></a>

       <% else %>
        <a><%= link_to 'Join this Course',"#{@course.id}/add",method: "put", class:"btn btn-dark " , onclick: "alert('You joind #{@course.name} course')" %></a>
        <% end%>

 <% end %>
 
  </div>
</div>
  </div>
